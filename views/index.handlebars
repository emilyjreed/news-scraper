<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="/">News Scraper Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/saved">Saved Articles</a>
            </li>
            <li class="nav-item">
                <span class="nav-link scrape" style="cursor: pointer">Scrape New Articles</span>
            </li>
        </ul>
    </div>
</nav>
<br> {{#unless unsavedNews}}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="alert alert-dismissible alert-primary" style="text-align:center">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Uh oh, no articles!</strong>
        </div>
        <div>
            <button type="button" class="btn btn-warning btn-lg btn-block scrape">Scrape articles</button>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
{{/unless}} {{#each unsavedNews}}
<div class="class row">
    <div class="class col-md-3 col-sm-2"></div>
    <div class="card mb-3 col-md-6 col-sm-8 col-xs-12">
        <a href={{link}}>
            <h3 class="card-header">{{title}}</h3>
        </a>
        <div class="card-body row">
            <div class="col-md-6">
                <img style="height:150px; width:200px; display: block; margin:auto" src={{photoURL}} alt="Card image">
            </div>
            <div class="col-md-6">
                <p>
                    <span class="card-title">{{author}}</span>
                    <span style="color:brown">|</span>
                    <span class="card-subtitle text-muted">{{time}}</pan>
                </p>
                <p class="card-text">{{summary}}</p>
                <button class="btn btn-success btn-sm save" data-id={{_id}}>Save</button>
            </div>
        </div>
    </div>
    <div class="class col-md-3 col-sm-2"></div>
</div>
{{/each}}

<div class="modal articleCounter" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update complate</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p class="report">No new articles. Check back later!</p>
            </div>
            <div class="modal-footer">
                <button type="button test" class="btn btn-primary" data-dismiss="modal">Okay</button>
            </div>
        </div>
    </div>
</div>